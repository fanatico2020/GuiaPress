<div class="container">
  <div class="card mt-4">
    <div class="card-header"><h2>Criação de Usuário</h2></div>
    <div class="card-body">
      <form action="/users/create" method="post">
        <input
          class="form-control"
          name="email"
          type="email"
          placeholder="email@dominio.com"
        /><br />
        <input
          class="form-control"
          name="password"
          type="password"
          placeholder="*********"
        /><br />
        <button type="submit" class="btn btn-success btn-block">Criar</button>
      </form>
    </div>
  </div>
</div>

